package com.mycompany.clase1e2;

import javax.swing.JOptionPane;

public class Clase1E2 {

    public static void main(String[] args) {
        int numero;
        double numDec;
        String nombre;
        
        nombre = JOptionPane.showInputDialog("Digite su nombre: ");
        numero = Integer.parseInt(JOptionPane.showInputDialog("Digite un número entero: "));
        numDec = Double.parseDouble(JOptionPane.showInputDialog("Digite un número real: "));
        
        JOptionPane.showMessageDialog(null, "Hola: " + nombre);
        JOptionPane.showMessageDialog(null, "Número: " + numero);
        JOptionPane.showMessageDialog(null, "Número: " + numDec);
    }
}
